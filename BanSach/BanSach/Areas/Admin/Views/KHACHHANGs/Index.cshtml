@model IEnumerable<BanSach.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Khách Hàng</h2>

<button type="button" class="btn btn-outline-light">
    @Html.ActionLink("Thêm mới", "Create")
</button>
<table class="table">
    <tr>
        <th> Họ tên KH
            @*@Html.DisplayNameFor(model => model.HoTen)*@
        </th>
        <th> SĐT
            @*@Html.DisplayNameFor(model => model.SoDienThoai)*@
        </th>
        <th> Mật Khẩu
            @*@Html.DisplayNameFor(model => model.MatKhau)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th> Địa chỉ
            @*@Html.DisplayNameFor(model => model.DiaChiNH)*@
        </th>
        <th> Ngày sinh
            @*@Html.DisplayNameFor(model => model.NgaySinh)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChiNH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaKH }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaKH }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaKH })
        </td>
    </tr>
}

</table>
